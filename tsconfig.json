{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "preserveConstEnums": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
